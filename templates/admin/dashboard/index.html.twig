{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de Bord | AutoAdmin{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>


    /* Variables CSS pour une meilleure maintenance */
    :root {
        --primary-color: #4361ee;
        --success-color: #2ec4b6;
        --warning-color: #ff9f1c;
        --danger-color: #e71d36;
        --card-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
        --transition-speed: 0.3s;
    }

    

    

    .stat-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 1rem 0;
    }

    .stat-title {
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
    }

    .stat-icon {
        position: absolute;
        right: 1.5rem;
        top: 1.5rem;
        font-size: 2.5rem;
        opacity: 0.2;
    }


    /* Couleurs des cartes */
    .bg-custom-primary { background-color: var(--primary-color); }
    .bg-custom-success { background-color: var(--success-color); }
    .bg-custom-warning { background-color: var(--warning-color); }
    .bg-custom-danger { background-color: var(--danger-color); }

    





    .dashboard-header {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
    }

    .chart-container {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
        min-height: 400px;
    }

    .recent-bookings {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        box-shadow: 0 4px 25px rgba(0, 0, 0, 0.05);
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
    }

    .dashboard-card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        height: 100%;
        background: linear-gradient(135deg, var(--primary-color) 0%, #3a0ca3 100%);
        color: white;
    }

    .stat-card {
        padding: 1.5rem;
        position: relative;
    }

    

    

    .status-active { background: #e3f2fd; color: #1976d2; }
    .status-completed { background: #e8f5e9; color: #2e7d32; }
    .status-pending { background: #fff3e0; color: #ef6c00; }
</style>
{% endblock %}

