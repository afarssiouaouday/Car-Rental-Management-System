
{# {% block title %}Log in!{% endblock %} #}
{% block stylesheet %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        html,body{
            width: 100vw;
            height: 100vh;
        }
        body{
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f0f2f5;
        }
        .containerx{
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70vh;
            width: 70vw;

        }
        .left{
            width: 50%;
            padding-left: 10%;
        }
        .right{
            width: 30%;
            padding: 15px;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .sidebar-brand {
            font-size: 40px;
            display: flex;
            align-items: center;
            color: #007bff;
            text-decoration: none;
        }

        .sidebar-brand i {
            margin-right: 12px;
        }       
        .submit{
            width: 100%;
        }
        .green{
            background-color: #4ca42c;
            color: white;
        }
        .centre{
            text-align: center;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="containerx ">
        <div class="left">
            <h1 class="sidebar-brand">
                <i class="fa-solid fa-car-side"></i>
                <span >AutoAdmin</span>
            </h1>
        </div>
        <div class="right">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% else %} 
                <label for="inputUsername">Adresse e-mail ou numéro de tél</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me" checked> Souviens-toi de moi
                    </label>
                </div>

                <button class="btn btn-lg btn-primary submit" type="submit">
                    Sign in
                </button>
            </form>
            <hr>
            <div class="centre">
                <a class="btn green btn-primary" href="{{ path('app_register') }}">Créer un nouveau compte</a>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
